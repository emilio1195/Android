<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_cardview_Category_preview"
    android:layout_height="170dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:elevation="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:id="@+id/cvCategory"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="#EBFAFAF6"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgTrayicon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_image_preview"
                android:visibility="gone"/>


            <ProgressBar
                android:id="@+id/pbDownloadIcon"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/txtCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/italic_txt"
                android:gravity="center_horizontal"
                android:text="Categoria"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
