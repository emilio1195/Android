<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:alpha="0.95">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPARTIR APP"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:fontFamily="@font/barcade3d"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gracias por querer compartir esta app, puedes compartirla con tus amigos o
    en grupos de Whats App y en Facebook. Te recompensaré con 100 monedas como agradecimiento a tu apoyo.\n
    Podrás compartir 2 veces al día, ya que también el objetivo es consumir la publicidad."
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                android:justificationMode="inter_word"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txtCantidadCompartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/2"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btnCompartirApp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="COMPARTIR"
                android:textSize="20dp"
                android:fontFamily="@font/romano"
                android:background="@drawable/marco_rectangular"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/social_facebook_box_blue_256_30649"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/whatsappmessage_conversation_whatsap_7149"/>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbwaitShare"
            style="?android:attr/progressBarStyle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="invisible"/>


    </FrameLayout>
</androidx.cardview.widget.CardView>
